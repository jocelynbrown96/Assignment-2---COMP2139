@model Assignment_1___COMP2139.Models.Category

@{
    ViewData["Title"] = Model.Name;
}

<style>

    body {
        background: lightgray;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .navbar.bg-white {
        background-color: black !important;
    }
    .bg-white {
        background-color: #222 !important;
    }
    .navbar .nav-link {
        color: white !important;
        text-align: right;
    }
    .navbar .nav-link.active,
    .navbar .nav-link:hover {
        color: #ffa500 !important;
    }
    .navbar-light .navbar-brand {
        color: #fff !important;
    }
    .navbar, .container, header, .banner-container {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    /* Banner */
    .banner-container {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 40px;
        height: 320px;
        overflow: hidden;
    }
    .banner-container img {
        width: 100vw;
        height: 320px;
        object-fit: cover;
        display: block;
    }
    .banner-title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 5rem;
        font-weight: bold;
        text-shadow: 0 2px 14px #1A1A1A;
        margin: 0;
        width: 100%;
        text-align: center;
    }

    /* Events grid */
    .row.events-row {
        width: 90%;
        margin: 0 auto 60px auto;
        display: flex;
        flex-wrap: wrap;
        gap: 32px;
        justify-content: center;
    }

    /* Event card styling - matching home-tile and category-card style */
    .event-card {
        width: 450px;
        background: grey;
        border-radius: 24px;
        border: 1.5px solid #00aeff;
        box-shadow: 0 8px 32px rgba(0,0,0,0.08), 0 2px 12px rgba(0,0,0,0.12);
        display: flex;
        flex-direction: column;
        padding: 20px;
        color: #222;
        font-weight: bold;
        text-align: center;
        transition: box-shadow 0.25s, transform 0.23s, background 0.20s;
        margin-top: 20px;
    }
    .event-card:hover {
        background: #00aeff;
        color: #fff;
        transform: translateY(-2px) scale(1.03);
        cursor: pointer;
    }
    .event-card h5 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: inherit;
    }
    .event-card p {
        font-weight: normal;
        font-size: 1rem;
        margin-bottom: 1.5rem;
        color: inherit;
    }

    /* Buttons consistent with site style */
    a.btn-primary, a.btn-outline-primary {
        background-color: #222 !important;
        border: none !important;
        font-weight: bold;
        color: white !important;
        padding: 10px 20px;
        border-radius: 10px;
        font-size: 1rem;
        text-decoration: none;
        transition: background-color 0.3s ease;
        align-self: center;
        width: fit-content;
    }
    a.btn-primary:hover, a.btn-outline-primary:hover {
        background-color: #00aeff !important;
        color: white !important;
        text-decoration: none;
    }
</style>


<!-- Banner -->
<div class="banner-container">
    <img src="/HomeBanner.png" alt="Concert crowd" />
    <h1 class="banner-title">@Model.Name</h1>
</div>

<!-- Events in category -->
@if (Model.Events != null && Model.Events.Any())
{
    <div class="row events-row">
        @foreach (var ev in Model.Events)
        {
            <div class="event-card">
                <h5>
                    <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="text-decoration-none" style="color:inherit;">
                        @ev.Title
                    </a>
                </h5>
                <p>
                    📍 <strong>@ev.Location</strong><br />
                    🗓️ @ev.Date.ToString("MMMM dd, yyyy")<br />
                    💵 $@ev.TicketPrice
                </p>
                <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="btn btn-primary">
                    View Details
                </a>
            </div>
        }
    </div>
}
else
{
    <p style="text-align:center; font-size:1.2rem; color:#555;">No events in this category yet.</p>
}
