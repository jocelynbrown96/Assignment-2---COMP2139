@{
ViewData["Title"] = "About Us";
}

<style>
    /* Shared styling for consistency */
    .navbar.bg-white { background-color: black !important; }
    .bg-white { background-color: #222 !important; }
    .navbar .nav-link { color: white !important; text-align: right; }
    .navbar .nav-link.active,
    .navbar .nav-link:hover { color: #ffa500 !important; }

    body {
        background-color: lightgrey;
        margin: 0;
        padding: 0; /* remove default padding to attach banner */
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .navbar-light .navbar-brand { color: #fff !important; }

    /* Banner section */
    .banner-container {
        position: relative;
        width: 100vw;
        left: 50%;
        margin-left: -50vw;
        margin-top: 0; /* ensures banner is flush with navbar */
    }

    /* Remove all bottom margin from navbar and containers to close gaps */
    .navbar, .container, header, .banner-container {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    .banner-container img {
        width: 100vw;
        height: 320px;
        object-fit: cover;
        display: block;
    }

    .banner-title {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 5rem;
        font-weight: bold;
        text-shadow: 0 2px 14px #1A1A1A;
        text-align: center;
        width: 100%;
    }

    /* Main about content container */
    .about-container {
        width: 85%;
        margin: 40px auto;
        background: #fff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        line-height: 1.7;
        color: #222;
    }

    .about-container h2 {
        color: #222;
        border-bottom: 3px solid #ffa500;
        display: inline-block;
        padding-bottom: 4px;
        margin-bottom: 18px;
        font-size: 1.9rem;
    }

    .about-container p {
        font-size: 1.08rem;
        margin-bottom: 22px;
    }

    .highlight-box {
        background: #f9f9f9;
        border-left: 6px solid #00aeff;
        padding: 18px 22px;
        border-radius: 10px;
        margin-top: 28px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

    .highlight-box h3 {
        margin-top: 0;
        color: #00aeff;
    }

    .btn-primary {
        background-color: #222;
        border: none;
        font-weight: bold;
        color: white;
        padding: 12px 28px;
        border-radius: 12px;
        transition: background-color 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary:hover {
        background-color: #00aeff;
    }
</style>

<!-- Banner -->
<div class="banner-container">
    <img src="/HomeBanner.png" alt="Concert Crowd">
    <h1 class="banner-title">About Us</h1>
</div>

<!-- About Content -->
<div class="about-container">
    <h2>Who We Are</h2>
    <p>
        Welcome to <strong>TicketMe</strong>: your one-stop destination for discovering, organizing, and attending the most exciting events across the globe!
        Whether it’s live music or sports, we've got you covered --> all while making it easy to connect you with the experiences that you love most!
    </p>

    <h2>Team Members</h2>
    <div class="team-container">
        <div class="team-card">
            <div class="team-avatar">👩‍💻</div>
            <h3>Jocelyn Brown</h3>
            <p>Student Number: 101597391</p>
        </div>
        <div class="team-card">
            <div class="team-avatar">👨‍💻</div>
            <h3>Mackenzie Hodgson</h3>
            <p>Student Number: 101597352</p>
        </div>
    </div>

    <div class="highlight-box">
        <h3>Course Information</h3>
        <ul style="margin-left: 20px;">
            <li>📅 COMP2139 - Web Application Development (.NET)</li>
            <li>🎟️ Assignment 2: Virtual Event Ticketing System</li>
            <li>📍 George Brown College</li>
            <li>💬 Professors: Sergio Santilli and Cryston Heaven</li>
        </ul>
    </div>
</div>

<style>
    /* Team section styling */
    .team-container {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .team-card {
        background: #f9f9f9;
        border-radius: 14px;
        padding: 20px 25px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        flex: 1 1 200px;
        max-width: 250px;
    }

    .team-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .team-avatar {
        font-size: 3rem;
        margin-bottom: 12px;
    }

    .team-card h3 {
        margin: 6px 0;
        color: #222;
        font-size: 1.3rem;
    }

    .team-card p {
        color: #555;
        font-size: 0.95rem;
        margin: 0;
    }
</style>