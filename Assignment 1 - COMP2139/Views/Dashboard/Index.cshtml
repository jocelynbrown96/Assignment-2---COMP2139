                <!-- Placeholder Ticket 2 -->
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Another Event</h5>
                        <small>Date: Feb 2, 2026 | Virtual Event</small>
                    </div>

                    <div class="text-end">
                        <img src="https://via.placeholder.com/80x80?text=QR" class="img-thumbnail" />
                        <br />
                        <button class="btn btn-primary btn-sm mt-2">Download Ticket</button>
