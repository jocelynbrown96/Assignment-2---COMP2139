@model List<Assignment_1___COMP2139.Models.Purchase>

@{
    ViewData["Title"] = "My Dashboard";
}
@using Assignment_1___COMP2139.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<h2 class="mb-4">My Dashboard</h2>

<div class="row">

    <!-- ========================= -->
    <!--        MY TICKETS         -->
    <!-- ========================= -->
    <div class="col-md-6 mb-3">
        <div class="card p-3">
            <h4>My Tickets</h4>

            <div class="list-group">

                @if (!Model.Any())
                {
                    <div class="list-group-item text-muted">
                        You havenâ€™t purchased any tickets yet.
                    </div>
                }
                else
                {
                    @foreach (var purchase in Model)
                    {
                        foreach (var pe in purchase.PurchaseEvents)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">

                                <div>
                                    <h5 class="mb-1">@pe.Event.Title</h5>
                                    <small>
                                        Date: @pe.Event.Date.ToString("MMM dd, yyyy")<br />
                                        Location: @pe.Event.Location<br />
                                        Quantity: @pe.Quantity
                                    </small>
                                </div>

                                <div class="text-end">

                                    <!-- REAL QR CODE -->
                                    <img src="/Purchases/QRCode/@purchase.Id"
                                         class="img-thumbnail"
                                         style="width:80px; height:80px;" />

                                    <br />

                                    <!-- DOWNLOAD BUTTON -->
                                    <a class="btn btn-primary btn-sm mt-2"
                                       asp-controller="Purchases"
                                       asp-action="DownloadTicket"
                                       asp-route-id="@purchase.Id">
                                        Download Ticket
                                    </a>
                                </div>

                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>

    <!-- ========================= -->
    <!--     PURCHASE HISTORY      -->
    <!-- ========================= -->
    <div class="col-md-6 mb-3">
        <h4>Purchase History</h4>

        <div class="list-group">

            @if (!Model.Any())
            {
                <div class="list-group-item text-muted">
                    You have not purchased any tickets yet.
                </div>
            }
            else
            {
                @foreach (var purchase in Model)
                {
                    foreach (var pe in purchase.PurchaseEvents)
                    {
                        <div class="list-group-item">
                            <h5 class="mb-1">@pe.Event.Title</h5>
                            <small>
                                Purchased on: @purchase.PurchaseDate.ToString("MMM dd, yyyy")<br />
                                Quantity: @pe.Quantity
                            </small>

                            <!-- STAR RATING -->
                            <div class="rating mt-2" data-event-id="@pe.Event.Id">
                                <i class="fa-regular fa-star" data-value="1"></i>
                                <i class="fa-regular fa-star" data-value="2"></i>
                                <i class="fa-regular fa-star" data-value="3"></i>
                                <i class="fa-regular fa-star" data-value="4"></i>
                                <i class="fa-regular fa-star" data-value="5"></i>
                            </div>
                        </div>
                    }
                }
            }
        </div>

        <small class="text-muted">Star ratings will be saved later using AJAX.</small>
    </div>
</div>

<div class="row">

    <!-- ========================= -->
    <!--   ORGANIZER SECTION       -->
    <!-- ========================= -->
    @if (User.IsInRole("Organizer"))
    {
        <div class="col-md-6 mb-3">
            <div class="card p-3">
                <h4>My Events (Organizer)</h4>

                <div class="list-group">

                    @foreach (var purchase in Model)
                    {
                        foreach (var pe in purchase.PurchaseEvents)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">

                                <div>
                                    <h5 class="mb-1">@pe.Event.Title</h5>
                                    <small>
                                        Date: @pe.Event.Date.ToString("MMM dd, yyyy") |
                                        Location: @pe.Event.Location
                                    </small>
                                    <br />
                                    <small>Quantity: @pe.Quantity</small>
                                </div>

                                <div class="text-end">

                                    <!-- REAL QR CODE -->
                                    <img src="/Purchases/QRCode/@purchase.Id"
                                         class="img-thumbnail"
                                         style="width:80px; height:80px;" />

                                    <br />

                                    <!-- DOWNLOAD BUTTON -->
                                    <a class="btn btn-primary btn-sm mt-2"
                                       asp-controller="Purchases"
                                       asp-action="DownloadTicket"
                                       asp-route-id="@purchase.Id">
                                        Download Ticket
                                    </a>
                                </div>

                            </div>
                        }
                    }

                </div>

                <small class="text-muted">
                    Real events and revenue data will appear here once backend integration is added.
                </small>
            </div>
        </div>
    }

    <!-- ========================= -->
    <!--         PROFILE           -->
    <!-- ========================= -->
    <div class="col-md-6 mb-3">
        <div class="card p-3">
            <h4>Profile</h4>

            <div class="d-flex align-items-center mb-3">

                @{
                    var currentUser = await UserManager.GetUserAsync(User);
                    var profileImage = string.IsNullOrEmpty(currentUser?.ProfileImagePath)
                        ? Url.Content("~/uploads/default-profile.png")
                        : Url.Content(currentUser.ProfileImagePath);
                }

                <!-- Profile image -->
                <img src="@profileImage"
                     class="rounded-circle border"
                     style="width:80px; height:80px; object-fit:cover;" />

                <div class="ms-3">
                    <h5>@currentUser.FullName</h5>
                    <p class="text-muted mb-1">@currentUser.Email</p>

                    <a class="btn btn-sm btn-primary"
                       asp-area="Identity"
                       asp-page="/Account/Manage/Index">
                        Edit Profile
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.rating i').forEach(star => {
            star.addEventListener('click', function () {
                let value = this.getAttribute("data-value");
                let parent = this.parentElement;

                parent.querySelectorAll("i").forEach(i => i.classList.remove("fa-solid"));
                parent.querySelectorAll("i").forEach(i => i.classList.add("fa-regular"));

                for (let i = 1; i <= value; i++) {
                    parent.querySelector(`i[data-value="${i}"]`).classList.remove("fa-regular");
                    parent.querySelector(`i[data-value="${i}"]`).classList.add("fa-solid");
                }
            });
        });
    </script>
}